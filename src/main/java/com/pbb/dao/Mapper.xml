<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 绑定到com.pbb.dao.BookMapper接口，需要全路径 -->
<mapper namespace="com.pbb.dao.BookMapper">

    <!--增加一个Book，id默认对应接口中的方法名，参数为方法中的参数类型-->
    <insert id="addBook" parameterType="Books">
        insert into ssm.books(bookName,bookCounts,detail)
        values (#{bookName}, #{bookCounts}, #{detail})
    </insert>

    <!--根据id删除一个Book，id默认对应接口中的方法名，参数为方法中的参数类型-->
    <delete id="deleteBookById" parameterType="int">
        delete from ssm.books where bookID=#{bookID}
    </delete>

    <!--更新Book，id默认对应接口中的方法名，参数为方法中的参数类型-->
    <update id="updateBook" parameterType="Books">
        update ssm.books
        set bookName = #{bookName},bookCounts = #{bookCounts},detail = #{detail}
        where bookID = #{bookID}
    </update>

    <!--根据id查询,返回一个Book，id默认对应接口中的方法名，resultType为返回值类型-->
    <select id="queryBookById" resultType="Books">
        select * from ssm.books
        where bookID = #{bookID}
    </select>

    <!--查询全部Book，id默认对应接口中的方法名，resultType为返回值类型-->
    <select id="queryAllBook" resultType="Books">
        SELECT * from ssm.books
    </select>

</mapper>